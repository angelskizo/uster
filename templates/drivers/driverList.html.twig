{% extends 'base.html.twig' %}

{% block title %}Drivers List{% endblock %}
{% block acdr %} active" aria-current="page"{% endblock %}
{% block body %}
<div><h1>Drivers</h1></div>
<a href="/drivers/new">Add New</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>License</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {%for driver in drivers%}
        <tr>
            <th>{{driver.id}}</th>
            <th>{{driver.name}}</th>
            <th>{{driver.surname}}</th>
            <th>{{driver.license}}</th>
            <th>
                <a href="{{ path('updateDriver',{'id':driver.id}) }}">Edit</a>
                <a href="{{ path('deleteDriver',{'id':driver.id}) }}">Delete</a>
            </th>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}